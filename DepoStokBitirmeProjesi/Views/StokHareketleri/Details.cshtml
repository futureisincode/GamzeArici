@model DepoStokBitirmeProjesi.Entities.StokHareketleri

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">AnaSayfa</a></li>
                        <li class="breadcrumb-item active"><a asp-action="Index">StokHareketleri</a></li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <h1>Stok Hareketi Detayı</h1>

    <div>
        <h4>Stok Hareketleri</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Adet)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Adet)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fiyat)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fiyat)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tarih)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tarih)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IslemTuru)
            </dt>
            <dd class="col-sm-10">
                @(Model.IslemTuru==1?"Giriş":"Çıkış")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Depo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Depo.DepoAdi)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Urun)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Urun.Aciklama)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>