@model DepoStokBitirmeProjesi.Entities.StokHareketleri

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Stok Hareketleri</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="">Anasayfa</a></li>
                        <li class="breadcrumb-item active"></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->

            <div class="row">

                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Stok Hareketi Ekle</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div class="card-body">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Adet" class="control-label"></label>
                                    <input asp-for="Adet" class="form-control" />
                                    <span asp-validation-for="Adet" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Fiyat" class="control-label"></label>
                                    <input asp-for="Fiyat" class="form-control" />
                                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Tarih" class="control-label"></label>
                                    <input asp-for="Tarih" class="form-control" />
                                    <span asp-validation-for="Tarih" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IslemTuru" class="control-label"></label>
                                    <select asp-for="IslemTuru" class="form-control">
                                        <option value="1">Giriş</option>
                                        <option value="0">Çıkış</option>
                                    </select>
                                    <span asp-validation-for="IslemTuru" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DepoId" class="control-label"></label>
                                    <select asp-for="DepoId" class="form-control" asp-items="ViewBag.DepoId"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UrunId" class="control-label"></label>
                                    <select asp-for="UrunId" class="form-control" asp-items="ViewBag.UrunId"></select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Ekle" class="btn btn-primary" />
                                    <a class="btn btn-warning" asp-action="Index">Geri Dön</a>

                                </div>
                            </form>
                        </div>
                    </div>


                </div>
                @section Scripts {
                    @{
                        await Html.RenderPartialAsync("_ValidationScriptsPartial");
                    }
                }
